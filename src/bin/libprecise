# Checking for information about a particular library.

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
        echo
	echo $(tput bold)libprecise$(tput sgr0): Check for details about a particular dynamic library.
        echo
        echo Syntax: libprecise LIBRARY
        echo
	echo The library must exist in the form LIBRARY.*, or information will
	echo be innacurate or incomplete.
	echo
        echo Flag:
        echo "  -h | --help : Display this help menu."
        echo
        exit
fi

HEAD=/var/yalpack
PKGDATA=$HEAD/pkgdata
PKGLIBS=$PKGDATA/PKG-LIBS
PKGDEPS=$PKGDATA/PKG-DEPS
BINDEPS=$HEAD/BIN-DEPS

y="$1[.]"

echo
echo '	'Checking for information about the library $(tput bold)"$1"$(tput sgr0). If the intended 
echo '	'library does not exist in the form $(tput bold)"$1".*$(tput sgr0), results will be
echo '	'incomplete or inaccurate.
echo

for PKG in "$PKGLIBS"/*
do
	if [ -f "$PKG/libs" ]; then
		x=$(grep "$y" "$PKG/libs")
		PKG=$(basename "$PKG")
		[ -n "$x" ] && echo '	'$(tput bold)"$1"$(tput sgr0) appears to have been installed by the $(tput bold)"$PKG"$(tput sgr0) package.
	fi
done

echo
# Determining the correct number of cut backslashes
DEPSNUM=$(echo "$PKGDEPS" | tr -cd '/' | wc -c)
BINSNUM=$(echo "$BINDEPS" | tr -cd '/' | wc -c)
# Adjusting
DEPSNUM=$((DEPSNUM + 2))
BINSNUM=$((BINSNUM + 2))
echo '	'The following $(tput bold)packages$(tput sgr0) use this library:
echo
grep "$y" "$PKGDEPS"/*/* | cut -d'/' -f"$DEPSNUM"- | cut -d'/' -f-1 | uniq

echo
echo '	'The following $(tput bold)programs$(tput sgr0) use this library:
echo
grep "$y" $BINDEPS/*/* | cut -d'/' -f"$BINSNUM"- | cut -d'/' -f-1 | uniq
echo
